         point="org.eclipse.ui.views">
      <category
            id="it.rcpvision.emf.components.examples.mail.messageview"
            name="Mail Example">
      </category>
      <view
            category="it.rcpvision.emf.components.examples.mail.messageview"
            class="it.rcpvision.emf.components.examples.mail.messageview.MessageviewExecutableExtensionFactory:it.rcpvision.emf.components.examples.mail.messageview.views.MessageView"
